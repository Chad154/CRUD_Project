<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="CRUD_Project.ui.CustomerController"
            prefWidth="900.0" prefHeight="650.0">

    <Label layoutX="20" layoutY="15"
           text="Customers CRUD"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- Columna izquierda -->
    <Label layoutX="20" layoutY="60" text="ID"/>
    <TextField fx:id="tfId" layoutX="140" layoutY="55" prefWidth="220"/>

    <Label layoutX="20" layoutY="95" text="First Name *"/>
    <TextField fx:id="tfFirstName" layoutX="140" layoutY="90" prefWidth="220"/>

    <Label layoutX="20" layoutY="130" text="Last Name *"/>
    <TextField fx:id="tfLastName" layoutX="140" layoutY="125" prefWidth="220"/>

    <Label layoutX="20" layoutY="165" text="Middle Initial"/>
    <TextField fx:id="tfMiddleInitial" layoutX="140" layoutY="160" prefWidth="60"/>

    <Label layoutX="20" layoutY="200" text="Email *"/>
    <TextField fx:id="tfEmail" layoutX="140" layoutY="195" prefWidth="220"/>

    <Label layoutX="20" layoutY="235" text="Password *"/>
    <PasswordField fx:id="pfPassword" layoutX="140" layoutY="230" prefWidth="220"/>

    <!-- Columna derecha -->
    <Label layoutX="410" layoutY="95" text="Street *"/>
    <TextField fx:id="tfStreet" layoutX="520" layoutY="90" prefWidth="300"/>

    <Label layoutX="410" layoutY="130" text="City *"/>
    <TextField fx:id="tfCity" layoutX="520" layoutY="125" prefWidth="200"/>

    <Label layoutX="410" layoutY="165" text="State *"/>
    <TextField fx:id="tfState" layoutX="520" layoutY="160" prefWidth="80"/>

    <Label layoutX="410" layoutY="200" text="ZIP *"/>
    <TextField fx:id="tfZip" layoutX="520" layoutY="195" prefWidth="120"/>

    <Label layoutX="410" layoutY="235" text="Phone *"/>
    <TextField fx:id="tfPhone" layoutX="520" layoutY="230" prefWidth="180"/>

    <!-- Botones CRUD -->
    <Button fx:id="btSearch" layoutX="140" layoutY="270" text="Search" prefWidth="100"/>
    <Button fx:id="btCreate" layoutX="250" layoutY="270" text="Create" prefWidth="100"/>
    <Button fx:id="btUpdate" layoutX="360" layoutY="270" text="Update" prefWidth="100"/>
    <Button fx:id="btDelete" layoutX="470" layoutY="270" text="Delete" prefWidth="100"/>

    <!-- Tabla -->
    <TableView fx:id="tvCustomers"
               layoutX="20" layoutY="320"
               prefWidth="860" prefHeight="270">
        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="70"/>
            <TableColumn fx:id="colFirstName" text="First Name" prefWidth="150"/>
            <TableColumn fx:id="colLastName" text="Last Name" prefWidth="150"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="220"/>
            <TableColumn fx:id="colCity" text="City" prefWidth="130"/>
            <TableColumn fx:id="colPhone" text="Phone" prefWidth="130"/>
        </columns>
    </TableView>

    <Button fx:id="btRefresh" layoutX="20" layoutY="610" text="Refresh"/>
    <Button fx:id="btExit" layoutX="800" layoutY="610" text="Exit"/>

</AnchorPane>
