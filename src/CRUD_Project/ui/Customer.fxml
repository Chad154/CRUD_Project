<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx/8"
            xmlns:fx="http://javafx.com/fxml/1"
           fx:controller="CRUD_Project.ui.CustomerController"
            prefWidth="800.0" prefHeight="600.0">

    <!-- ===== TITULO ===== -->
    <Label layoutX="20" layoutY="15"
           text="Customers CRUD"
           style="-fx-font-size: 18px; -fx-font-weight: bold;" />

    <!-- ===== FORMULARIO ===== -->
    <Label layoutX="20" layoutY="60" text="ID"/>
    <TextField fx:id="tfId" layoutX="120" layoutY="55" prefWidth="200"/>

    <Label layoutX="20" layoutY="95" text="First Name"/>
    <TextField fx:id="tfFirstName" layoutX="120" layoutY="90" prefWidth="200"/>

    <Label layoutX="20" layoutY="130" text="Last Name"/>
    <TextField fx:id="tfLastName" layoutX="120" layoutY="125" prefWidth="200"/>

    <Label layoutX="20" layoutY="165" text="Email"/>
    <TextField fx:id="tfEmail" layoutX="120" layoutY="160" prefWidth="200"/>

    <!-- ===== BOTONES FORM ===== -->
    <Button fx:id="btSearch" layoutX="350" layoutY="55" text="Search"/>
    <Button fx:id="btCreate" layoutX="350" layoutY="90" text="Create"/>
    <Button fx:id="btUpdate" layoutX="350" layoutY="125" text="Update"/>
    <Button fx:id="btDelete" layoutX="350" layoutY="160" text="Delete"/>

    <!-- ===== TABLA ===== -->
    <TableView fx:id="tvCustomers"
               layoutX="20" layoutY="220"
               prefWidth="760" prefHeight="300">

        <columns>
            <TableColumn fx:id="colId" text="ID" prefWidth="80"/>
            <TableColumn fx:id="colFirstName" text="First Name" prefWidth="200"/>
            <TableColumn fx:id="colLastName" text="Last Name" prefWidth="200"/>
            <TableColumn fx:id="colEmail" text="Email" prefWidth="260"/>
        </columns>
    </TableView>

    <!-- ===== BOTONES ABAJO ===== -->
    <Button fx:id="btRefresh" layoutX="20" layoutY="540" text="Refresh"/>
    <Button fx:id="btExit" layoutX="700" layoutY="540" text="Exit"/>

</AnchorPane>
